<Window x:Class="GameBookkeeping.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameBookkeeping"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="100"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="75"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="Добавить сотрудника" VerticalAlignment="Center" Margin="5,5,5,5" Padding="5,5" MinWidth="110" MinHeight="30" Click="Button_Click_1"/>
            <Button Content="Добавить контрагента" VerticalAlignment="Center" Margin="5,5,5,5" Padding="5,5" MinWidth="110" MinHeight="30"/>
            <Button Content="Добавить операцию" VerticalAlignment="Center" Margin="5,5,5,5" Padding="5,5" MinWidth="110" MinHeight="30"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <ComboBox MinWidth="200" MaxWidth="500" ItemsSource="{Binding Employees}" SelectedItem="{Binding SelectedEmployee}">
            </ComboBox>
        </StackPanel>

    </Grid>
</Window>
